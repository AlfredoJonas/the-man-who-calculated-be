packages:
  yum:
    amazon-linux-extras: []

commands:
    01_postgres_activate:
        command: sudo amazon-linux-extras enable postgresql10
    02_postgres_install:
        command: sudo yum install -y postgresql-devel

container_commands:
    01_install_requirements:
        command: "source /var/app/venv/*/bin/activate && pip install -r requirements.txt"
    02_migrate:
        command: "source /var/app/venv/*/bin/activate && python manage.py migrate --noinput"
        leader_only: true
    03_loadfixtures:
         command: "source /var/app/venv/*/bin/activate && python manage.py loaddata integrated_users integrated_operations --noinput"